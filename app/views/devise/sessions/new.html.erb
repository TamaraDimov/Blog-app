<div class="center">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <br />
<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", style:"width: 600px" %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", style:"width: 600px" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
<%= f.submit "Log in", style: "width: 600px" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>