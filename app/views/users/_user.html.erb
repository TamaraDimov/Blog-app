  <%= link_to user_path(user.id) do%>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%= user.photo %>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= user.name %></h5>
          <p class="card-text"><small class="text-body-secondary">Number of posts: <%= user.post_counter %></small></p>
        </div>
      </div>
    </div>
  </div>
  <%end%>

  