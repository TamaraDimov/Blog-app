<%= render partial: 'user', locals: { user: @user} %>
<div class="card mb-3" style="max-width: 540px;">
    <h5 class="card-title">Bio</h5>
    <p><%= @user.bio %></p>
</div>


<% @user.posts.recent_posts.limit(3).each do |post| %>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="card-body">
      <h5 class="card-title">Post no. <%= post.id %></h5>
      <p><%= post.text %></p>
    </div>
  </div>
<% end %>



<%= link_to user_posts_path(@user.id) do %>
<button type="button" class="btn btn-light center" style="margin-left:200px">See all posts</button>
<% end %>
